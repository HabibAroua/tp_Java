package ex1;

public class Employer 
{
	private  String nom;
	private  String garde;
	private  float salaire;
    	
	public  void setNom(String nom)
	{
		this.nom=nom;
	}
	
	public  void setGarde(String garde)
	{
		this.garde=garde;
	}
	
	public  void setSalire(float salaire)
	{
		this.salaire=salaire;
	}
	
	public  String getGarde()
	{
		return this.garde;
	}
	
	public  float getSalaire()
	{
		return this.salaire;
	}
	
	public  String getNom()
	{
		return this.nom;
	}
	
	public  String toString()
	{
		return "le nom est :"+getNom()+" garde est :"+getGarde()+" salaire est :"+getSalaire()+" ";
	}
	
	//question 3
	public Employer(String nom)
	{
		this.nom=nom;
	}

    //question 7
	public  boolean comparer(Employer e)
	{
		return this.toString()==e.toString();
	}
}
