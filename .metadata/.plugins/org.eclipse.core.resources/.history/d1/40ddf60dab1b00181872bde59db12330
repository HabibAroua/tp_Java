package ex3;

public class Livre
{
	private String titre;
	private int annee;
	private int edition;
	private Editeur editeur;
	private Auteur[] auteur;
	
	public  Livre()
	{
		
	}
	
	public Livre(String titre , int annee , int edition , Editeur editeur , Auteur[] auteur)
	{
		this.titre=titre;
		this.annee=annee;
		this.edition=edition;
		this.editeur=editeur;
		this.auteur=auteur;
	}
	
	public String getTitre()
	{
		return this.titre;
	}
	
	public int getAnnee()
	{
		return this.annee;
	}
	
	public Editeur getEditeur()
	{
		return this.editeur;
	}
	
	public Auteur getPremierAuteur()
	{
		return auteur[0];
	}
	
	public String toString()
	{
		return "Titre :"+getTitre()+" L'annee de l'edition :"+getAnnee()+" ";
	}
}
